<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="/style.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js" defer></script>
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script src="/script.js" defer></script>

  <title>DoWithoutInk - Write-and-Read</title>
</head>

<body>
  <header>
    <div class="row">
      <div class="navbar-fixed">
        <nav class="blue-grey darken-3">
          <div class="container">
            <div class="nav-wrapper">
              <a href="/" class="brand-logo left">DoWithoutInk</a>

              <div class="header-search-wrapper hide-on-med-and-down">
                <form id="search-form" action="/" method="GET">
                  <div class="input-field">
                    <i id="search-icon" class="material-icons">search</i>
                    <input id="search-bar" type="search" class="autocomplete header-search-input" autocomplete="off"
                      placeholder="Search...">
                  </div>
                </form>
              </div>

              <ul class="right hide-on-med-and-down">
                <% if (!currentUser) { %>
                <li><a href="/user/login" class="waves-effect waves-light btn amber darken-2">Sign In</a></li>
                <% } else { %>
                <li>
                  <a class="dropdown-trigger btn amber darken-2" data-target="profile-dropdown">
                    <%= currentUser.username.length > 15 ? currentUser.username.slice(0, 15) + '...' : currentUser.username %>
                    <i class="material-icons right">arrow_drop_down</i>
                  </a>
                </li>
                <li>
                  <ul id="profile-dropdown" class="dropdown-content">
                    <li><a href="/author/<%= currentUser.author.id %>" class="amber-text text-darken-2">Profile</a></li>
                    <li class="divider" tabindex="-1"></li>
                    <li><a href="/user/logout" class="amber-text text-darken-2">Log Out</a></li>
                  </ul>
                </li>
                <% } %>
              </ul>
            </div>
          </div>
        </nav>
      </div>
    </div>
    <div class="container">
      <div class="row" style="margin-bottom: 8px;">
        <div class="col s6 offset-s3">
          <% if(error.length > 0){ %>
          <div id="alert-error" class="card-panel yellow lighten-4 yellow-text text-darken-4 alert">
            <b>Warning!</b> <%= error %>
            <a onclick="$('#alert-error').remove()" class="btn-flat alert-close">
              <i class="material-icons">close</i>
            </a>
          </div>
          <% } %>
          <% if(success.length > 0){ %>
          <div id="alert-success" class="card-panel green lighten-4 green-text text-darken-4 alert">
            <b>Success!</b> <%= success %>
            <a onclick="$('#alert-success').remove()" class="btn-flat alert-close">
              <i class="material-icons">close</i>
            </a>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <main>